<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ylemp.gradecalculator"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="20" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo" >
        <activity
            android:name="com.ylemp.gradecalculator.MyActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ylemp.gradecalculator.CreateClass"
            android:label="Create a Class"
            android:parentActivityName="com.ylemp.gradecalculator.MyActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MyActivity" />
        </activity>
        <activity
            android:name="com.ylemp.gradecalculator.GradeView"
            android:label="Create a Grade"
            android:parentActivityName="com.ylemp.gradecalculator.MyActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".CreateClass" />
        </activity>
        <activity
            android:name="com.ylemp.gradecalculator.CreateGrade"
            android:label="Create a Grade"
            android:parentActivityName="com.ylemp.gradecalculator.GradeView" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".CreateClass" />
        </activity>
        <activity
            android:name="com.ylemp.gradecalculator.ScoreView"
            android:label="Scores"
            android:parentActivityName="com.ylemp.gradecalculator.GradeView" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".GradeView" />
        </activity>
        <activity
            android:name="com.ylemp.gradecalculator.CreateScore"
            android:label="Enter a Score"
            android:parentActivityName="com.ylemp.gradecalculator.ScoreView" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ScoreView" />
        </activity>
    </application>

</manifest>